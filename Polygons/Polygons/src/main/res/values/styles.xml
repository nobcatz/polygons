<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- full screen wit violet color -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/violet</item>

    </style>

    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/base01</item>
        <item name="android:textColor">@color/base03</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="SignOutButton" parent="@style/GameButton">
        <item name="android:background">@color/base01</item>
        <item name="android:textColor">@color/base3</item>
    </style>


</resources>
